    {{#if pet}}
        <h1>Mascota con ID: {{pet._id}}</h1>

        <h3>Nombre {{pet.name}}</h3>
        <h3>Age {{pet.age}}</h3>
        <h3>Color: {{pet.color}}</h3>
        <h3>Specie: {{pet.specie}}</h3>
        <h3>Breed: {{pet.breed}}</h3>

        {{#if pet.image}}
            <img src="{{pet.image}}" alt="avatar">
        {{/if}}

    {{else}}
        <h3>No encontramos la mascota que buscas! 404 y para casa</h3>
    {{/if}}


